  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/dist/index.js",
      "args": ["-p", "5000", "-c", "/home/jeswin/temp/retransmit-config/"],
      "preLaunchTask": "build",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug with mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": true,
      "args": ["--no-timeouts", "dist/test/test.js"],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "build",
      "env": {
        "CHIMPANZEE_DEBUG": "1"
      },
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
